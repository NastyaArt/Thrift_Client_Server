<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
        <VBox spacing="10">
            <TitledPane collapsible="false" text="Tables">
                <VBox spacing="10">
                        <Label text="It will be tables from MySQL"/>
                </VBox>
            </TitledPane>
            <TitledPane collapsible="false" text="Commands">
                <VBox spacing="10">
                    <Button fx:id="btnAdd" text="Add" onAction="#Add"/>
                    <Button fx:id="btnDel" text="Delete" onAction="#Delete"/>
                    <Button fx:id="btnEdit" text="Edit" onAction="#Edit"/>
                </VBox>
            </TitledPane>
        </VBox>
</GridPane>