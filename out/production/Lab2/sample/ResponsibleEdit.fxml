<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.ResponsibleEdit"
          alignment="center" hgap="5" vgap="5">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <VBox spacing="5">
        <TitledPane collapsible="false" text="Add Responsible">
            <VBox spacing="5">
                <HBox spacing="5">
                    <Label text="Code:"/>
                    <TextField fx:id="codeAdd" text="11"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="FIO:"/>
                    <TextField fx:id="fioAdd" text="Петров П.Д." />
                </HBox>
                <HBox spacing="5">
                    <Label text="Phone:"/>
                    <TextField fx:id="phoneAdd" text="111-22-91"/>
                </HBox>
                <Button text="Add" fx:id="btnAdd" onAction="#Add"/>
            </VBox>
        </TitledPane>
        <TitledPane collapsible="false" text="Delete Responsible">
            <VBox spacing="5">
                <HBox spacing="5">
                    <Label text="Code:"/>
                    <TextField fx:id="codeDel" text="11"/>
                </HBox>
                <Button text="Delete" fx:id="btnDel" onAction="#Delete"/>
            </VBox>
        </TitledPane>
        <TitledPane collapsible="false" text="Edit Responsible">
            <VBox spacing="5">
                <HBox spacing="5">
                    <Label text="Code:"/>
                    <TextField fx:id="codeEdit" text="11"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="FIO:"/>
                    <TextField fx:id="fioEdit"/>
                </HBox>
                <HBox spacing="5">
                    <Label text="Phone:"/>
                    <TextField fx:id="phoneEdit" text="111-22-21"/>
                </HBox>
                <Button text="Edit" fx:id="btnEdit" onAction="#Edit"/>
            </VBox>
        </TitledPane>
    </VBox>
</GridPane>
